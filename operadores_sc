#include<stdio.h>
#include<math.h>
#define R pow(n1,2) + pow(n2, 2)

int main(){
    int opcao;
    int n1, n2, result;
	printf("Selecione sua opcao: \n");
	printf("1 - Soma dos numeros\n2 - O produto do primeiro pelo quadrado do segundo\n3 - O quadrado do primeiro\n4 - A raiz quadrada da soma dos quadrados\n");
	scanf("%d", &opcao);
	printf("Deposite aqui seu valor inteiro: ");
	scanf("%d", &n1);
	printf("Deposite aqui seu valor inteiro: ");
	scanf("%d", &n2);
	switch(opcao){ 
	case 1:
		result = n1 + n2; //soma dos n√∫meros
		printf("%d", result);
	break;
	case 2:
	    result = n1 * pow(n2, 2);
	    printf("%d", result);
	break;
	case 3:
	    result = pow(n1, 2);
	    printf("%d", result);
	break;
	case 4:
	    result = sqrt(R);
	    printf("%d", result);
	    
	break;
    default: printf("invalido");
	}
}
