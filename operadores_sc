#include<stdio.h>
#include<math.h>
#define R pow(n1,2) + pow(n2, 2)

int main(){
    int opcao;
    int n1, n2, result;
	printf("Selecione sua opcao: \n");
	printf("1. Soma\n2. Produto Notavel\n3. Quadrado primeiro\n4. Raiz da soma\n5");
	scanf("%d", &opcao);
	printf("Deposite aqui seu valor inteiro: ");
	scanf("%d", &n1);
	printf("Deposite aqui seu valor inteiro: ");
	scanf("%d", &n2);
	switch(opcao){ 
	case 1:
		result = n1 + n2; //soma dos n√∫meros
		printf("%d", result);
	break;
	case 2:
	    result = n1 + 2 * n1 * n2 + n2;
	    printf("%d", result);
	break;
	case 3:
	    result = pow(n1, 2);
	    printf("%d", result);
	break;
	case 4:
	    result = sqrt(R);
	    printf("%d", result);
	    
	break;
    default: printf("invalido");
	}
}
